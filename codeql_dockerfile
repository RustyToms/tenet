FROM ubuntu:20.04

ARG threads
ENV TZ=Europe
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Installing dependencies
RUN apt update \
  && apt -y upgrade \
  && apt install -y git curl wget python3-pip

WORKDIR /codeql-home
RUN apt install -y unzip
RUN wget -O codeql.zip https://github.com/github/codeql-cli-binaries/releases/download/v2.7.3/codeql-linux64.zip
RUN unzip -a codeql.zip

# Get CodeQL libraries and queries
RUN git clone https://github.com/github/codeql codeql-repo && cd codeql-repo && git checkout 2ecf0d3
ENV PATH "/codeql-home/codeql:${PATH}"
WORKDIR /codeql-home

# Precompile query rules
RUN codeql query compile /codeql-home/codeql-repo/javascript/ql/src/Security/ --threads=$threads
#ADD labels.sh /usr/local/bin

