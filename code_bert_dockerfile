FROM ubuntu:20.04

ENV TZ=Europe
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Installing dependencies
RUN apt update \
  && apt -y upgrade \
  && apt install -y git curl python3-pip

ADD ./* /code_bert/
WORKDIR /code_bert
RUN pip install torch==1.9.0+cu111 torchvision==0.10.0+cu111 \
    && pip install torchaudio===0.9.0 -f https://download.pytorch.org/whl/torch_stable.html \
    && pip install pytorch-lightning transformers datasets torchmetrics jsonlines sklearn
